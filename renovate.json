{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": true,
  "platformAutomerge": true,
  "branchConcurrentLimit": 0,
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "rebaseWhen": "behind-base-branch",
  "ignorePaths": [
    "terraform"
  ],
  "ansible": {
    "enabled": false
  },
  "terraform": {
    "enabled": false
  },
  "kubernetes": {
    "fileMatch": ["manifests/.+\\.yaml$"]
  }
}
